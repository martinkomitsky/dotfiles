#!/usr/bin/env bash

dir=$(cd $(dirname ${BASH_SOURCE[0]}) && pwd); dir=$(dirname $dir)

# Hidden files
declare -a files=(
    gitconfig
    gitignore
    eslintrc
    inputrc
    tmux.conf
    vim
    vimrc
    ctags
    replyrc
    prettier
    gemrc
    ripgreprc
)

for i in ${files[@]}; do
    # create symbolic link if not exists
    [ -L $HOME/.$i ] || ln -sv $dir/$i $HOME/.$i
done

# Normal files
declare -a files=(
    tsconfig.json
)

for i in ${files[@]}; do
    # create symbolic link if not exists
    [ -L $HOME/$i ] || ln -sv $dir/$i $HOME/$i
done
